{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@controllers/*": ["src/controllers/*"],
      "@dtos/*": ["src/dtos/*"],
      "@entities/*": ["src/entities/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
